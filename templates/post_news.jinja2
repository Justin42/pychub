{% extends "base.jinja2" %}
{% block title %}{{ free_company.name }} - Post News{% endblock %}
{% block content %}
        <div class="row">
        <div class="eight columns offset-by-two">
            <div class="full-width">
                <form method="POST" id="post-news">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="u-full-width"/>
                    <label for="body">Body</label>
                    <textarea name="body" rows="15" class="u-full-width" style="height: 10em;"></textarea>
                    <input type="submit" value="Post"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}