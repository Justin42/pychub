{% extends "base.jinja2" %}
{% block head %}
    <!--suppress JSUnresolvedLibraryURL -->
    <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="{{ request.static_url('pychub:static/js/jquery.wysibb.min.js') }}"></script>
    <script src="{{ request.static_url('pychub:static/js/wysibb-settings.js') }}"></script>
    <link rel="stylesheet" href="{{request.static_url('pychub:static/css/wbbtheme.css')}}"/>
{% endblock %}
{% block title %}{{ free_company.name }} - Post News{% endblock %}
{% block content %}
        <div class="row">
        <div class="eight columns offset-by-two">
            <div class="full-width">
                <form method="POST" id="post-news">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="u-full-width"/>
                    <label for="body">Body</label>
                    <textarea id="editor" name="body" rows="15" class="u-full-width" style="height: 10em;"></textarea>
                    <input style="margin-top: 1em" class="button-primary" type="submit" value="Post"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}