{% extends "base.jinja2" %}
{% block title %}User Profile - {{ user.username }}{% endblock %}
{% block content %}
<div class="row">
    <div class="six columns offset-by-three">
        <div class="content-title">User Profile - {{ user.username }}</div>
        {% if characters|length > 0 %}
            <div class="profile-section-header">Characters</div>
            <table class="u-full-width shadow-box link-style-rollover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Server</th>
                        <th>Free Company</th>
                    </tr>
                </thead>
                <tbody>
                {% for character in characters %}
                    <tr>
                        <td><a href="{{ request.route_url('character', id=character.lodestone_id) }}">{{ character.name }}</a></td>
                        <td>{{ character.server }}</td>
                        <td><a href="{{ request.route_url('members', id=character.free_company.lodestone_id) }}">{{ character.free_company.name }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </ul>
        {% else %}
            <div class="profile-section-header">No Characters.</div>
        {% endif %}
    </div>
</div>
{% endblock %}