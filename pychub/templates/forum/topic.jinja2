{% extends "base.jinja2" %}
{% block content %}
    <div class="row">
        <div class="eight columns offset-by-two">
            <ul id="news-list">
                <li>
                {% for post in posts %}
                    <div class="post">
                        <div class="post-header">
                            <span class="post-user">{{ post.user.username }}</span>
                            <span class="post-date">{{ post.post_date }}</span>
                        </div>
                        <span class="post-content">{{ post.content }}</span>
                    </div>
                {% endfor %}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}