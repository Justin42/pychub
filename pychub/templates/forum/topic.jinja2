{% extends "base.jinja2" %}
{% block content %}
    <div class="row">
        <div class="eight columns offset-by-two">
            <ul class="post-list">
                <li class="shadow-box">
                {% for post in posts %}
                        <div class="post-content">{{ post.content }}</div>
                        <div class="post-detail">
                            {{ post.post_date.strftime('%b %d') }} at {{ post.post_date.strftime('%I:%M%p') }} by <i>{{ post.user.username }}</i>
                        </div>
                {% endfor %}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}