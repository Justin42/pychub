{% extends "base.jinja2" %}
{% block title %}{{ free_company.name }} Forums - Add Category{% endblock %}
{% block content %}
        <div class="row">
        <div class="eight columns offset-by-two">
            <div class="full-width">
                <form method="POST" id="add-category">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="u-full-width"/>

                    <label for="alias">Alias</label>
                    <input type="text" name="alias" class="u-full-width"/>

                    <label for="description">Description</label>
                    <textarea name="description" rows="2" class="u-full-width" style="height: 3em;"></textarea>
                    <input type="submit" value="Create Category"/>
                </form>
            </div>
        </div>
    </div>
{% endblock %}